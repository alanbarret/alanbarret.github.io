
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads for all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes only for authenticated users on their own assets
    match /portfolio-assets/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
